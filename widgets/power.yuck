;;;;;;; VARIABLES ;;;;;;;

(defpoll power :interval "1h" :initial '[]' `cat $HOME/.config/eww/power.json`)

;;;;;;; WIDGETS   ;;;;;;;

(defwidget powermenu[?orientation]
    (box
        :orientation "h"
        :space-evenly false
        (for item in power
            (button
                :onclick "power ${item.action}"
                :class "box large ${item.class}"
                {item.short}
            )
        )
    )
)

