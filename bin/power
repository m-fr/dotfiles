#!/bin/bash

usage () {
    echo "Usage:"
    echo "  $0 <action>"
    exit 0
}

lock () {
    FILE=`mktemp -u`.png
    WIDTH=`xdpyinfo | grep dimensions | cut -d: -f2 | cut -dx -f1`
    maim -u "${FILE}" \
        && primitive -i "${FILE}" -o "${FILE}" -n 50 -m 4 -s $WIDTH \
        && i3lock --color=282a36 --image="${FILE}" --tiling
}

case $1 in
    "poweroff"|"shutdown"|"halt")
        systemctl poweroff
        ;;
    "reboot"|"restart")
        systemctl reboot
        ;;
    "suspend"|"sleep")
        lock && systemctl suspend
        ;;
    "logout"|"logoff")
        bspc quit
        ;;
    "lock")
        lock
        ;;
    *)
        usage
        ;;
esac
