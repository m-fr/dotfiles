# show help
{super,shift} + F1
	urxvt -geometry 1x1 -name sxhkd_help -e ~/.config/sxhkd/{sxhkd,app}_help.sh

# shut down / reboot
super + ctrl + alt + {q,r}
	power {poweroff,reboot}

# suspend
super + ctrl + alt + s
	power suspend

# lock screen
super + ctrl + alt + l
	power lock

# lock screen
XF86ScreenSaver
	power lock

# toggle keyboard layout
alt + space
	~/.config/sxhkd/switch_kb_layout.sh

#
# media handling
#

# turn volume
XF86Audio{Lower,Raise}Volume
	amixer -q set Master 5%{-,+}

# mute/unmute
XF86AudioMute
	~/.config/sxhkd/mute.sh

# play/pause
XF86AudioPlay
    playerctl play-pause &

# audio stop
XF86AudioStop
    playerctl stop &

# previous track
XF86AudioPrev
    playerctl previous &

# next track
XF86AudioNext
    playerctl next &

#
# wm independent hotkeys
#

# raise brightness
XF86MonBrightnessUp
    brightnessctl set +5%

# lower brightness
XF86MonBrightnessDown
    brightnessctl set 5%-

# set monitor layout
super + alt + p
    ~/.config/sxhkd/display.sh

# set monitor layout
XF86Display
    ~/.config/sxhkd/display.sh

# open dashboard widget
super + Escape
    ~/.config/sxhkd/dashboard.sh

# terminal emulator
super + Return
	urxvt --chdir $HOME

# window switcher
super + d
	rofi -show window

# make sxhkd reload its configuration files:
super + shift + Escape
	pkill -USR1 -x sxhkd

# take screenshot (window)
Print + ctrl
    maim -u -d 3 -st 9999999 | tee /tmp/scr_$(date +%s).png | feh -F -

# take screenshot (selection)
Print + alt
    maim -u -d 3 -s | tee /tmp/scr_$(date +%s).png | feh -F -

# take screenshot (full screen)
Print
    maim -u -d 3 | tee /tmp/scr_$(date +%s).png | feh -F -

#
# launcher
#

# quick launch (files, browser, virtual, notes, ide)
super + alt + {1,2,3,4,5}
	{nemo,firefox,vmware,obsidian,codium}

# quick launch (terminal, network)
super + alt + {6,7}
	urxvt {--chdir $HOME, -name nm -e nmtui}

# quick launch (chat, secrets, mixer)
super + alt + {8,9,0}
	{signal-desktop,keepass2,pavucontrol}

# program launcher
super + r
	rofi -show run

#
# bspwm hotkeys
#

# quit/restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

# close and kill
super + {_,shift + }w
	bspc node -{c,k}

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# send the newest marked node to the newest preselected node
super + y
	bspc node newest.marked.local -n newest.!automatic.local

# swap the current node and the biggest node
super + g
	bspc node -s biggest

#
# state/flags
#

# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
super + {p,b,comma,period}
	bspc node -f @{parent,brother,first,second}

# focus the next/previous node in the current desktop
super + {_,shift + }c
	bspc node -f {next,prev}.local

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# focus the older or newer node/desktop in the focus history
alt + {grave,Tab}{ + shift,_}
	bspc wm -h off; \
	bspc {node,desktop} {older,newer} -f; \
	bspc wm -h on

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

#
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}
