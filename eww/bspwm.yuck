;;;;;;; VARIABLES ;;;;;;;

(defpoll bspwm
    :interval '500ms'
    :initial ""
    `python3 bspwm.py`
)

;;;;;;; WIDGETS   ;;;;;;;

(defwidget desktop[name label ?class]
    (box
        :class "box"
        (button
            :tooltip name
            :class "icon ${class ?: ''}"
            :onclick "bspc desktop -f ${name}"
            label
        )
    )
)

(defwidget bspwm[]
    (literal :content bspwm)
)

